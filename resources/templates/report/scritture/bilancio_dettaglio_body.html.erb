<html lang="en">
  <head>
    <meta charset="utf-8">
    <!-- CSS relative to tmp -->
    <link href="../resources/stylesheets/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link href="../resources/stylesheets/custom.css" rel="stylesheet">
    <script src="../resources/javascripts/jquery-min.js"></script>

  </head>
  <body>
    <div class="container">
      <div class="row">
        <div class="span12">
          <table id="report" class="table table-striped table-bordered table-condensed">
            <tbody>
              <% limit = (self.result_set_lstrep_clienti.size >= self.result_set_lstrep_fornitori.size) ? self.result_set_lstrep_clienti.size : self.result_set_lstrep_fornitori.size %>
              <% 0.upto(limit -1) do |indice| %>
                <tr>
                  <% if clienti = self.result_set_lstrep_clienti[indice] %>
                    <td style="width: 10%;" class="left"><div class="dontsplit"><%= clienti[0] %></div></td>
                    <td style="width: 30%;" class="left"><div class="dontsplit"><%= clienti[1] %></div></td>
                    <td style="width: 10%;" class="right"><div class="dontsplit"><%= Helpers::ApplicationHelper.currency(clienti[2]) %></div></td>
                  <% else %>
                    <%= "<td />" * 3 %>
                  <% end %>
                  <% if fornitori = self.result_set_lstrep_fornitori[indice] %>
                    <td style="width: 10%;" class="left"><div class="dontsplit"><%= fornitori[0] %></div></td>
                    <td style="width: 30%;" class="left"><div class="dontsplit"><%= fornitori[1] %></div></td>
                    <td style="width: 10%;" class="right"><div class="dontsplit"><%= Helpers::ApplicationHelper.currency(fornitori[2]) %></div></td>
                  <% else %>
                    <%= "<td />" * 3 %>
                  <% end %>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </body>
</html>
