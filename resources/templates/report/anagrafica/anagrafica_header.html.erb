<html lang="en">
  <head>
    <meta charset="utf-8">
    <title>Anagrafica header</title>

    <!-- CSS relative to tmp -->
    <link href="../resources/stylesheets/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link href="../resources/stylesheets/custom.css" rel="stylesheet">
    <script src="../resources/javascripts/jquery-min.js"></script>
    <script src="../resources/javascripts/common.js"></script>
    <script>
      var page = new Page();
      $(document).ready(function () {
        page.numbered();
        //page.headerRepeat();
      });
    </script>
  </head>

  <body>
    <div class="container">
      <div class="row">
        <div class="span4 offset8 right">
          <small>
            <%= dati_azienda.denominazione %> <span>pag. </span><span id="page"></span>/<span id="page-count"></span>
          </small>
        </div>
      </div>
    </div>
    <br />
    <br />
    <div class="container">
      <div class="row">
        <div class="span6 offset3">
          <p class="center">
            <strong><%= ["Anagrafica #{categoria}", dati_azienda.denominazione].join(' ') %></strong><br /><br />
          </p>
        </div>
      </div>
      <div class="row">
        <div class="span12">
          <table id="head" class="table table-head table-bordered table-condensed">
            <thead>
              <tr>
                <% if chk_dettagliata.checked? %>
                  <th style="width: 20%;" class="left">Nominativo</th>
                  <th style="width: 15%;" class="left">Codice fiscale</th>
                  <th style="width: 15%;" class="left">Partita iva</th>
                  <th style="width: 20%;" class="left">Indirizzo</th>
                  <th style="width: 10%;" class="left">Citt√†</th>
                  <th style="width: 10%;" class="left">Telefono</th>
                  <th style="width: 10%;" class="left">Cellulare</th>
                <% else %>
                  <th style="width: 35%;" class="left">Nominativo</th>
                  <th style="width: 20%;" class="left">Codice fiscale</th>
                  <th style="width: 15%;" class="left">Partita iva</th>
                  <th style="width: 15%;" class="left">Telefono</th>
                  <th style="width: 15%;" class="left">Cellulare</th>
                <% end %>
              </tr>
            </thead>
          </table>
        </div>
      </div>
    </div>
  </body>
</html>
