<html lang="en">
  <head>
    <meta charset="utf-8">
    <!-- CSS relative to tmp -->
    <link href="../resources/stylesheets/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link href="../resources/stylesheets/custom.css" rel="stylesheet">
    <script src="../resources/javascripts/jquery-min.js"></script>

  </head>
  <body>
    <div class="container">
      <div class="row">
        <div class="span12">
          <table id="report" class="table table-striped table-bordered table-condensed">
            <tbody>
              <% if chk_dettagliata.checked? %>
                <% self.result_set_lstrep_anagrafica.each do |riga| %>
                  <tr>
                    <td style="width: 20%;" class="left"><div class="dontsplit"><strong><%= riga[0] %></strong></div></td>
                    <td style="width: 15%;" class="left"><div class="dontsplit"><%= riga[1] %></div></td>
                    <td style="width: 15%;" class="left"><div class="dontsplit"><%= riga[2] %></div></td>
                    <td style="width: 20%;" class="left"><div class="dontsplit"><%= riga[3] %></div></td>
                    <td style="width: 10%;" class="left"><div class="dontsplit"><%= riga[4] %></div></td>
                    <td style="width: 10%;" class="left"><div class="dontsplit"><%= riga[5] %></div></td>
                    <td style="width: 10%;" class="left"><div class="dontsplit"><%= riga[6] %></div></td>
                  </tr>
                <% end %>
              <% else %>
                <% self.result_set_lstrep_anagrafica.each do |riga| %>
                  <tr>
                    <td style="width: 35%;" class="left"><div class="dontsplit"><strong><%= riga[0] %></strong></div></td>
                    <td style="width: 20%;" class="left"><div class="dontsplit"><%= riga[1] %></div></td>
                    <td style="width: 15%;" class="left"><div class="dontsplit"><%= riga[2] %></div></td>
                    <td style="width: 15%;" class="left"><div class="dontsplit"><%= riga[5] %></div></td>
                    <td style="width: 15%;" class="left"><div class="dontsplit"><%= riga[6] %></div></td>
                  </tr>
                <% end %>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </body>
</html>
