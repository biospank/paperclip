<html lang="en">
  <head>
    <meta charset="utf-8">
    <!-- CSS relative to tmp -->
    <link href="../resources/stylesheets/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link href="../resources/stylesheets/custom.css" rel="stylesheet">
    <script src="../resources/javascripts/jquery-min.js"></script>

  </head>
  <body>
    <div class="container">
      <div class="row">
        <div class="span12">
          <table id="report" class="table table-striped table-bordered table-condensed">
            <tbody>
              <% self.result_set_lstrep_giacenze.each do |riga| %>
                <tr>
                  <td style="width: 15%;" class="left"><div class="dontsplit"><%= riga.codice %></div></td>
                  <td style="width: 45%;" class="left"><div class="dontsplit"><%= riga.descrizione %></div></td>
                  <td style="width: 10%;" class="center"><div class="dontsplit"><%= riga.qta %></div></td>
                  <td style="width: 15%;" class="right"><div class="dontsplit"><%= Helpers::ApplicationHelper.currency(riga.prezzo_acquisto) %></div></td>
                  <td style="width: 15%;" class="right"><div class="dontsplit"><%= Helpers::ApplicationHelper.currency((riga.qta.to_i * riga.prezzo_acquisto.to_f)) %></div></td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </body>
</html>
