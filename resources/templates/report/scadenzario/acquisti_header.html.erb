<html lang="en">
  <head>
    <meta charset="utf-8">
    <title>Acquisti header</title>

    <!-- CSS relative to tmp -->
    <link href="../resources/stylesheets/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link href="../resources/stylesheets/custom.css" rel="stylesheet">
    <script src="../resources/javascripts/jquery-min.js"></script>
    <script src="../resources/javascripts/common.js"></script>
    <script>
      var page = new Page();
      $(document).ready(function () {
        page.numbered();
        //page.headerRepeat();
      });
    </script>
  </head>

  <body>
    <div class="container">
      <div class="row">
        <div class="span4 offset8 right">
          <small>
            <%= dati_azienda.denominazione %> <span>pag. </span><span id="page"></span>/<span id="page-count"></span>
          </small>
        </div>
      </div>
    </div>
    <br />
    <br />
    <div class="container">
      <div class="row">
        <div class="span8 offset2">
          <p class="center">
            <strong><%= ["REGISTRO DELLE FATTURE DI ACQUISTO DEL PERIODO", "#{(dati_azienda.liquidazione_iva == Helpers::ApplicationHelper::Liquidazione::MENSILE) ? filtro.periodo : Helpers::ApplicationHelper::Liquidazione::NUMERO_TRIMESTRE[filtro.periodo]}/#{filtro.anno}"].join(' ') %></strong><br /><br />
          </p>
        </div>
      </div>
      <div class="row">
        <div class="span12">
          <table id="head" class="table table-head table-bordered table-condensed">
            <thead>
              <tr>
                <th style="width: 14%;" class="left">Fornitore</th>
                <th style="width: 8%;" class="center">Fattura</th>
                <th style="width: 10%;" class="center">Data</th>
                <th style="width: 12%;" class="right">Importo</th>
                <th style="width: 13%;" class="left">Aliquota</th>
                <th style="width: 10%;" class="right">Imp.</th>
                <th style="width: 10%;" class="right">Iva</th>
                <th style="width: 10%;" class="right">Iva ind.</th>
                <th style="width: 13%;" class="left">Norma</th>
              </tr>
            </thead>
          </table>
        </div>
      </div>
    </div>
  </body>
</html>
